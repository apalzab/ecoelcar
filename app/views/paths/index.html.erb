<div class="paths-wrap">
  <section class="routes">
    <header><h1>Buscar Rutas</h1></header>
    <div class="panel panel-primary search">
      <div class="panel-heading">
        <h1 class="panel-title col-md-9"><%= @paths.count %> Rutas publicadas</h1>
        <div class="buttons">
          <h5 class="col-md-1">Ordenar por</h5>
          <%= link_to "Fecha", paths_path, class: 'btn btn-primary' %>
          <%= link_to "Precio", paths_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

    <% @paths.each do |path| %>
      <section class="route row">
        <article class='col-md-3 profile'>
          <div class="image">
            <%= image_tag path.user.photo.url %>
          </div>
          <div class="description">
            <p><span><%= link_to path.user.name, user_path(path.user) %></span></p>
            <p><%= path.user.age %> años</p>
            <p><%= path.user.ocupation %></p>
          </div>
        </article>
        <article class='col-md-6 info'>
          <% if path.datetime.to_date == Date.tomorrow %>
            <h3>Mañana - <%= path.datetime.time.strftime("%H:%M") %></h3>
          <% else %>
              <h3><%= get_human_week_day(path.datetime) %> <%= path.datetime.to_date.strftime('%d') %> de <%= get_human_month(path.datetime) %> - <%= path.datetime.time.strftime("%H:%M") %></h3>
          <% end %>
            <h4><%= Station.find(path.origin_station_id).name %><i class="glyphicon glyphicon-arrow-right"></i><%= Station.find(path.destination_station_id).name %></h4>
        </article>
        <article class='col-md-3 description'>
          <ul>
            <li><h3>1€</h3></li>
            <li>por pasajero</li>
            <li><h4>4 Plazas libres</h4></li>
            <li></li>
          </ul>
        </article>
      </section>
      <hr>
  <% end %>
    </section>
  
</div>