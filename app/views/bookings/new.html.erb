<div class="white-wrap">
  <section class="bookings">
    <h1>Reservar plaza</h1>
    <section class="tracks">
      <table class="table">
        <thead>
          <tr>
            <th><h4>Origen</h4></th>
            <th><h4>Destino</h4></th>
            <th><h4>Fecha</h4></th>
            <th><h4>Precio</h4></th>
         </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= Station.find(@track.origin_station_id).name %></td>
            <td><%= Station.find(@track.destination_station_id).name %></td>
            <td><%= get_human_week_day(@track.datetime) %> <%= @track.datetime.to_date.strftime('%d') %> de <%= get_human_month(@track.datetime) %> - <%= @track.datetime.time.strftime("%H:%M") %></td>
            <td><%= @track.price.round(2) %>â‚¬</td>
          </tr>
        </tbody>
      </table>
      <%= semantic_form_for(:booking, :url => user_bookings_path, class: 'hello') do |f| %>
        <input id="track_id" name="booking[track_id]" value=<%= @track.id %> style="display:none">
        <%= f.submit class: 'btn btn-warning', value: 'RESERVAR', disable_with: "Reservando...", confirm:"Vas a hacer una reserva!" %>
      <% end %>
    </section>
  </section>
</div>
