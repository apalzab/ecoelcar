<section class="registrations">
  <article class="col-lg-4 col-lg-offset-2">
    <header><h2>Cambia tu contraseña</h2></header>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
          <ul>
              <li><%= f.password_field("password", :placeholder => "contraseña") %><%= f.password_field("password_confirmation", :placeholder => "repite la contraseña") %></li>
              <li><%= f.submit I18n.t("devise.passwords.change"), class: 'btn btn-primary' %></li>
              <li><%= link_to I18n.t("devise.sessions.sign_in"), new_user_session_path %></li>
              <li><%= link_to I18n.t("devise.registrations.new"), new_user_registration_path %></li>
          </ul>
      <%= devise_error_messages! %>
      <% end %>
  </article>
</section>
