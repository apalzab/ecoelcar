        </header>
        <button id="sign-in-bottom" type="button" class="btn btn-blue">CREAR UNA CUENTA</button>
    </article>
    <article class="col-lg-3 col-lg-offset-2">
        <header>
          <h3>Ahorra</h3>
          <h3>Comparte</h3>
          <h3>Disfruta</h3>
      </header>
      <button id="login-bottom" type="button" class="btn btn-blue">INICIA SESIÓN</button>
    </article>
  </div>
</section>

<!-- modal new-user -->
<div class="modal fade new-user" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1 class="modal-title">¡Regístrate!</h1>
      </div>
      <%= form_for(:user, :as => :user, :url => registration_path(:user), :html => {:class => 'modal-body'}) do |f| %>
        <ul>
          <li><%= email_field("user", "email", :placeholder => "email@example.com", class: "form-control") %></li>
          <li><%= f.password_field :password, :placeholder => "password", autocomplete: "off", class: "form-control" %></li>
          <li><%= f.password_field :password_confirmation, autocomplete: "off",  class: "form-control" %></li>
          <li class="cl-effect-7"><%= f.submit I18n.t("devise.sessions.sign_in"), class: 'btn btn-primary form-control' %></li>
          <li><%= link_to I18n.t("devise.sessions.forgot_password"), new_password_path(:user) %></li>
      </ul>
    <% end %>
