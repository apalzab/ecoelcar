<div class="profile-wrap">
  <section class="panels">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Información de Perfil</h3>
      </div>
      <div class="panel-body">
        <article class="personal-info">
          <strong><h4>Información Personal</h4></strong>
           <ul>
            <li><h5>ID usuario | email</h5></li>
            <li><%= current_user.email || I18n.t('profile.attributes.no_data') %></li>
            <li><h5>Nombre</h5></li>
            <li><%= current_user.name || I18n.t('profile.attributes.no_data') %></li>
            <li><h5>Apellidos</h5></li>
            <li><%= current_user.last_name || I18n.t('profile.attributes.no_data') %></li>
            <li><h5>Antigüedad del carnet de conducir</h5></li>
            <li><%= current_user.drive_license_old || I18n.t('profile.attributes.no_data') %></li>
            <li><h5>Profesión</h5></li>
            <li><%= current_user.profesion || I18n.t('profile.attributes.no_data') %></li>
            <li><h5>Hobbies</h5></li>
            <li><%= current_user.hobbies || I18n.t('profile.attributes.no_data') %></li>
            <li><h5>Description</h5></li>
            <li><%= current_user.description || I18n.t('profile.attributes.no_data') %></li>
          </ul>
        </article>
      </div>
      <hr>
      <div class="panel-body">
        <article class="car-info">
          <strong><h4>Mi Coche</h4></strong>
          <ul>
            <li><h5>Marca y Modelo</h5></li>
            <li><%= current_user.vehicles.first.brand %> <%= current_user.vehicles.first.model %></li>
            <li><h5>Número de plazas</h5></li>
            <li><%= current_user.vehicles.first.seats %></li>
            <li><h5>Caballos</h5></li>
            <li><%= current_user.vehicles.first.horse_power || I18n.t('profile.attributes.no_data') %></li>
            <li><h5>Año de matriculación</h5></li>
            <li><%= current_user.vehicles.first.year_of_registration || I18n.t('profile.attributes.no_data') %></li>
          </ul>
          <%= image_tag current_user.vehicles.first.photo.url %>
        </article>
      </div>
    </div>

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Cuenta</h3>
      </div>
      <div class="panel-body">
        Cambiar Contraseña
      </div>
    </div>
  </section>
</div>